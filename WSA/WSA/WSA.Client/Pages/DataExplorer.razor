@page "/"
@using WSA.Client.Components
@inject IDataService DataService
@inject NavigationManager NavigationManager

<PageTitle>Oracle Data Explorer</PageTitle>

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-3">
            <div class="card">
                <div class="card-header">
                    <h5>Database Explorer</h5>
                </div>
                <div class="card-body">
                    @if (_schemas == null)
                    {
                        <p>Loading schemas...</p>
                    }
                    else
                    {
                        <div class="mb-3">
                            <label class="form-label">Schema</label>
                            <select @bind="_selectedSchema" class="form-select" @bind:after="LoadTables">
                                <option value="">Select Schema</option>
                                @foreach (var schema in _schemas)
                                {
                                    <option value="@schema">@schema</option>
                                }
                            </select>
                        </div>

                        @if (!string.IsNullOrEmpty(_selectedSchema))
                        {
                            <div class="list-group">
                                @foreach (var table in _tables)
                                {
                                    <button type="button" 
                                    class="list-group-item list-group-item-action @(table.TableName == _selectedTable ? "active" : "")"
                                    @onclick="() => SelectTable(table)">
                                        @table.TableName
                                        <span class="badge bg-secondary float-end">
                                            @table.RowCount
                                        </span>
                                    </button>
                                }
                            </div>
                        }
                    }
                </div>
            </div>
        </div>

        <div class="col-md-9">
            @if (_selectedTable != null)
            {
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5>@_selectedSchema.@_selectedTable</h5>
                        <div>
                            <button class="btn btn-sm btn-outline-primary" @onclick="RefreshData">
                                <i class="bi bi-arrow-clockwise"></i> Refresh
                            </button>
                        </div>
                    </div>

                    <div class="card-body">
                        @if (_isLoading)
                        {
                            <div class="text-center p-5">
                                <div class="spinner-border" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                                <p class="mt-2">Loading data...</p>
                            </div>
                        }
                        else if (_queryResult?.ErrorMessage != null)
                        {
                            <div class="alert alert-danger">
                                @_queryResult.ErrorMessage
                            </div>
                        }
                        else if (_queryResult?.Data?.Any() == true)
                        {
                            <DataViewer 
                            Data="@_queryResult.Data" 
                            Columns="@_queryResult.Columns"
                            TotalRecords="@_queryResult.TotalRecords"
                            CurrentPage="@_currentPage"
                            PageSize="@_pageSize"
                            OnPageChanged="HandlePageChanged" />
                        }
                        else
                        {
                            <div class="alert alert-info">
                                No data found in table.
                            </div>
                        }
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    Select a table from the left panel to view data.
                </div>
            }
        </div>
    </div>
</div>

@code {
    private List<string>? _schemas;
    private List<TableInfo> _tables = new();
    private string _selectedSchema = string.Empty;
    private string _selectedTable = string.Empty;
    private QueryResult? _queryResult;
    private bool _isLoading = false;
    private int _currentPage = 1;
    private int _pageSize = 50;

    protected override async Task OnInitializedAsync()
    {
        string s = "";
        await LoadSchemas();
    }
    
    private async Task LoadSchemas()
    {
        _schemas = await DataService.GetSchemasAsync();
    }
    
    private async Task LoadTables()
    {
        if (!string.IsNullOrEmpty(_selectedSchema))
        {
            _tables = await DataService.GetTablesAsync(_selectedSchema);
            _selectedTable = string.Empty;
        }
    }
    
    private async Task SelectTable(TableInfo table)
    {
        _selectedTable = table.TableName;
        _currentPage = 1;
        await LoadTableData();
    }
    
    private async Task LoadTableData()
    {
        if (string.IsNullOrEmpty(_selectedSchema) || string.IsNullOrEmpty(_selectedTable))
            return;
            
        _isLoading = true;
        StateHasChanged();
        
        var request = new DataRequest
        {
            Schema = _selectedSchema,
            TableName = _selectedTable,
            PageNumber = _currentPage,
            PageSize = _pageSize
        };
        
        _queryResult = await DataService.GetTableDataAsync(request);
        _isLoading = false;
    }
    
    private async Task RefreshData()
    {
        await LoadTableData();
    }
    
    private async Task HandlePageChanged(int page)
    {
        _currentPage = page;
        await LoadTableData();
    }
}
